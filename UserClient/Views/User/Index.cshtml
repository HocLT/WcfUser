
@{
    ViewData["Title"] = "Index";
}

<h1>Login</h1>

<form asp-action="Login" asp-controller="User" method="post">
    <table>
        <tr>
            <td>Username</td>
            <td><input name="username" /></td>
        </tr>
        <tr>
            <td>Password</td>
            <td><input type="password" name="password" /></td>
        </tr>
        <tr>
            <td><input type="submit" value="Login"/></td>
        </tr>
    </table>
</form>